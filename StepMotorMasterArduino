#include <SoftwareSerial.h> 
SoftwareSerial stmSerial(2, 3); 
void setup() { 
Serial.begin(9600); 
stmSerial.begin(9600); 
Serial.println(" 0-dur, 1-sağ, 2-sol"); 
 
 
} 
 
void loop() { 
  if(Serial.available()){ 
    char veri = Serial.read(); 
    Serial.print("gönderilen veri:"); 
    Serial.println(veri); 
    stmSerial.write(veri);
 
  }
